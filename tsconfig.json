{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "client/bootstrap.ts",
    "client/src/app.ts",
    "client/vendor.ts",
    "node_modules/immutable/dist/immutable.d.ts",
    "node_modules/normalizr/dist/normalizr.d.ts"
  ]
}


